# Telegram configuration
TG_API_ID=123456
TG_API_HASH=your_api_hash
TG_SESSION=your_string_session
BOT_IDS=
TG_GROUP_IDS=123456789

# Twilio configuration
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_TO=whatsapp:+1234567890,whatsapp:+098......
TWILIO_TEMPLATE_SID=
TWILIO_MEDIA_TEMPLATE_SID=

# Local media server configuration
# Port for the local aiohttp server that hosts downloaded media
MEDIA_PORT=8080
# Public base URL where the media server can be reached by Twilio.
# Must start with http:// or https:// and not point to localhost.
MEDIA_BASE_URL=https://example.com
# Path segment where the media files are served (default "/media")
MEDIA_ROUTE=/img
